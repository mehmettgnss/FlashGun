<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.simcoder.snapchatclone">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="face" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".loginRegistration.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".loginRegistration.ChooseLoginRegistrationActivity" />
        <activity android:name=".loginRegistration.RegistrationActivity" />
        <activity android:name=".FindUsersActivity" />
        <activity android:name=".DisplayImageActivity" />
        <activity android:name=".loginRegistration.profil" />
        <activity android:name=".loginRegistration.editprofile" />
        <activity android:name=".loginRegistration.profilimage" />
        <activity android:name=".EditCamera" />
        <activity android:name=".ChooseReceiverActivity" />
        <activity android:name=".music.MusicPlayerActivity" />
        <activity android:name=".music.AddMusicActivity" />
        <activity android:name=".music.MymusicActivity" />
        <activity android:name=".loginRegistration.LoginActivity" />
        <activity
            android:name=".Chat.ChatActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".PhotoEdit.PhotoMainActivity"
            android:parentActivityName=".EditCamera"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".music.PlayAgainActivity" />
        <activity android:name=".ChangepassActivity"></activity>
    </application>

</manifest>